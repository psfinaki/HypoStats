{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "assembleDebug", "compileDebugUnitTestKotlin" ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "assembleRelease" ],
      "group": "build"
    },
    {
      "label": "Install Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "installDebug" ],
      "group": "build"
    },
    {
      "label": "Uninstall Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "uninstallDebug" ],
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "test" ],
      "group": "test"
    },
    {
      "label": "Install Release",
      "type": "shell",
      "command": "./gradlew",
      "args": [ "installRelease" ],
      "group": "build"
    }
  ]
}